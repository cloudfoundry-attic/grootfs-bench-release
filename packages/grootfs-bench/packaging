set -e

export GOROOT=$(readlink -nf /var/vcap/packages/golang_1.7)
export GOPATH=${BOSH_INSTALL_TARGET}
export PATH=$GOROOT/bin:$PATH

mkdir -p ${BOSH_INSTALL_TARGET}/src
cp -ra src/* ${BOSH_INSTALL_TARGET}/src

mkdir ${BOSH_INSTALL_TARGET}/bin
pushd ${BOSH_INSTALL_TARGET}/src/code.cloudfoundry.org/grootfs-bench
  make
  mv {grootfs-bench,grootfs-bench-reporter} ${BOSH_INSTALL_TARGET}/bin
popd

rm -rf ${BOSH_INSTALL_TARGET}/src
